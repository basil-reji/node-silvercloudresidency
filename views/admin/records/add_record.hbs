<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<section id="account" class="section">
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-md-10 col-lg-8 card">
            <div class="card-body p-4">

                <ul class="nav nav-tabs nav-tabs-bordered">

                    <li class="nav-item">
                        <button class="nav-link active" data-bs-toggle="tab"
                            data-bs-target="#profile-overview">Book</button>
                    </li>

                    {{#if book.available}}
                    <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">
                            Reader</button>
                    </li>
                    {{/if}}

                    {{!-- <li class="nav-item">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change
                            Password</button>
                    </li> --}}

                </ul>
                <div class="tab-content py-2">

                    <div class="tab-pane fade show active profile-overview" id="profile-overview">

                        <h5 class="card-title">Book Details</h5>

                        {{#with book}}
                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-4 label">Book Name:</div>
                            <div class="col-lg-9 col-md-8">{{name}}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-4 label">Author:</div>
                            <div class="col-lg-9 col-md-8">{{author}}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-4 label">Type:</div>
                            <div class="col-lg-9 col-md-8">{{type}}</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-lg-3 col-md-4 label">Available Count:</div>
                            <div class="col-lg-9 col-md-8">{{count}}</div>
                        </div>
                        {{/with}}
                    </div>

                    {{#if book.available}}
                    <div class="tab-pane fade profile-edit" id="profile-edit">

                        <h5 class="card-title">Reader Details</h5>
                        <form action="/admin/records/add" method="post">

                            <div class="row mb-3">
                                <label for="librearian" class="col-md-4 col-lg-3 col-form-label">Librearian</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="librearian" type="text" class="form-control" id="librearian" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="ID" class="col-md-4 col-lg-3 col-form-label">Libreary ID</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="libreary_id" type="text" class="form-control" id="librearyid" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="name" class="col-md-4 col-lg-3 col-form-label">Name</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="name" type="text" class="form-control" id="name">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="phone" type="tel" class="form-control" id="phone">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="email" type="email" class="form-control" id="email">
                                </div>
                            </div>

                            <input type="hidden" id="book_id" name="id" value="{{book._id}}">

                            <div class="text-center pt-4">
                                <button type="submit" class="btn-primary">Add Record</button>
                            </div>
                        </form>
                    </div>
                    {{/if}}

                </div>

            </div>
        </div>
        <div class="col-12 col-md-8 col-lg-7 mt-5 d-flex justify-content-center align-items-center">
            <a href="/admin/" class="btn">Cancel</a>
        </div>
    </div>
</section>