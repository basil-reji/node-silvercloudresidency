    <div class="row mt-4 g-4 justify-content-center align-items-center">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">All Bookings</h5>

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Booking Date</th>
                                <th scope="col">Duration</th>
                                <th scope="col">Facility</th>
                                <th scope="col">Count</th>
                                <th scope="col">POC</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each records}}
                            <tr id="row-{{this._id}}">
                                <th scope="row">{{add @index 1}}</th>
                                <th scope="col">{{formatDate this.events.booking}}</th>
                                <th scope="col">
                                    {{formatDateOnly this.checkin}} -<br>
                                    {{formatDateOnly this.checkout}} <br>
                                    ({{this.duration}} Days)
                                </th>
                                <th scope="col">
                                    {{this.facility.name}}<br>
                                    {{this.facility.count}} Nos
                                </th>
                                <th scope="col">
                                    {{this.adults}} Adults<br>
                                    {{this.childrens}} Childrens
                                </th>
                                <th scope="col">
                                    {{this.poc.name}},<br>
                                    {{this.poc.phone}},<br>
                                    {{this.poc.email}},<br>
                                    <div class="mt-3">
                                        {{this.poc.address}}
                                    </div>
                                    
                                </th>
                                <th scope="col">
                                    {{#if this.status}}
                                        <span class="badge bg-success">Active</span>
                                    {{else}}
                                        <span class="badge bg-error">Cancelled</span>
                                        on {{formatDate this.events.cancelled}}
                                    {{/if}}
                                    {{#if this.payemnt_status}}
                                        <span class="badge bg-success">Paid</span>
                                    {{else}}
                                        <span class="badge bg-warning">Unpaid</span>
                                    {{/if}}
                                    {{#if (compare this.booking_status "confirmed")}}
                                        <br>
                                        <span class="badge bg-success">Booking Confirmed</span>
                                    {{else if (compare this.booking_status completed)}}
                                        <br>
                                        <span class="badge bg-success">Booking Completed</span>
                                    {{else if (compare this.booking_status "pending")}}
                                        <br>
                                        <span class="badge bg-warning">Booking Pending</span>
                                    {{else if (compare this.booking_status "cancelled")}}
                                        <br>
                                        <span class="badge bg-error">Booking Cancelled</span>
                                    {{else}}
                                    {{/if}}
                                </th>
                                <td>
                                    <button class="btn-ico red" onclick="deleteRecord(`{{this._id}}`)">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </button>
                                    <a href="/admin/records/edit/{{this._id}}" class="btn-ico blue">
                                        <i class="fa-regular fa-pen-to-square"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</section>