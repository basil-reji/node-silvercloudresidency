<section id="facilities" class="facilities">
    <div class="container">
        <div class="row g-4 justify-content-center align-items-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">All Facilities</h5>

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Count</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each facilities}}
                                <tr id="row-{{this._id}}">
                                    <th scope="row">{{add @index 1}}</th>
                                    <td>{{this.name}}</td>
                                    <td>{{this.count}}</td>
                                    <td>{{this.price}}</td>
                                    <td>
                                        <button class="btn-ico red" onclick="deleteFacility(`{{this._id}}`)">
                                            <i class="fa-regular fa-trash-can"></i>
                                        </button>
                                        <a href="/admin/facilities/edit/{{this.tag}}" class="btn-ico blue">
                                            <i class="fa-regular fa-pen-to-square"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8 col-lg-7 d-flex justify-content-center align-items-center">
                <a href="/admin/facilities/add" class="btn">Add Facility</a>
            </div>
        </div>
    </div>
</section>